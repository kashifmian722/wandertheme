{% sw_extends '@Storefront/storefront/page/product-detail/buy-widget.html.twig' %}



{% block page_product_detail_reviews %}
	{% if page.product.ratingAverage > 0 and page.reviews.totalReviews > 0 and page.getExtension('BrandCrockWanderlust').bcWlShowReview %}
		<div class="product-detail-reviews">
			{% sw_include '@Storefront/storefront/component/review/rating.html.twig' with {
				points: page.product.ratingAverage,
				style: 'text-primary'
			} %}
			<button class="nav-link product-detail-review-navigation-link"
				data-toggle="modal"
				data-target="#productReviewModal" data-offcanvas-tabs="false"
				aria-label="{{ "detail.tabsReview"|trans|sw_sanitize }}"
				rel="noopener"
				title="{{ "detail.tabsReview"|trans|sw_sanitize }}">
				{{ page.reviews.totalReviews }}
				{{ "detail.tabsReview"|trans|sw_sanitize }}
			</button>
		</div>

	{% endif %}


{% endblock %}

{% block page_product_detail_buy_inner %}
    {% if page.product.customFields['productType'] != 'storeWindow' %}
        {{ parent() }}
    {% endif %}
{% endblock %}
{% sw_extends '@Storefront/storefront/section/cms-section-sidebar.html.twig' %}

{% block section_sidebar_content %}
	{% set isProductEmpty = 'false' %}
	{% for block in mainContentBlocks %}
		{% for slot in block.getSlots() %}				
			{% if (slot.data.listing.total == 0) %}
				{% set isProductEmpty = 'true' %}
			{% else %}
				{% set isProductEmpty = 'false' %}
			{% endif %}
		{% endfor %}
	{% endfor %}
	<div class="bc_wl_backdrop">
		<div class="cms-section-sidebar-sidebar-content col-lg-4 col-xl-3 bc_wl_listing_side_bar bc_modal_is_left">
			{% if isProductEmpty == 'false' %}
				<div id="bc_wl_slide_close" class="bc_d_xs_none bc_d_sm_block">
					<button class="btn bc_wl_filter_btn" type="button" title="{{ "bc-wl-cms-section-slider-block.sliderCloseTitle" | trans }}" aria-label="{{ "bc-wl-cms-section-slider-block.sliderCloseTitle" | trans }}">
						{% sw_icon 'x' %} {{ "bc-wl-cms-section-slider-block.sliderCloseTitle" | trans }}
					</button>
				</div>
			{% endif %}
			{% for block in sidebarBlocks %}
				{% block section_sidebar_content_block %}
					{% sw_include "@Storefront/storefront/section/cms-section-block-container.html.twig" %}
				{% endblock %}
			{% endfor %}
		</div>
	</div>
{% endblock %}
{% block section_main_content %}
	{% set isProductEmpty = 'false' %}
	{% for block in mainContentBlocks %}
		{% for slot in block.getSlots() %}				
			{% if (slot.data.listing.total == 0) %}
				{% set isProductEmpty = 'true' %}
			{% else %}
				{% set isProductEmpty = 'false' %}
			{% endif %}
		{% endfor %}
	{% endfor %}
	<div class="cms-section-sidebar-main-content col-lg-12 col-xl-12 bc_wl_product_block">
		{% if isProductEmpty == 'false' %}
			<div class="bc_d_xs_none bc_d_sm_block col-lg-2" id="bc_wl_custom_slide">
				<button class="btn bc_wl_filter_btn bc_filter_custom_btn" type="button" title="{{ "bc-wl-cms-section-slider-block.categorySliderTitle" | trans }}" aria-label="{{ "bc-wl-cms-section-slider-block.categorySliderTitle" | trans }}">
					{{ "bc-wl-cms-section-slider-block.categorySliderTitle" | trans }}
				</button>
			</div>
        {% endif %}
		{% for block in mainContentBlocks %}
			{% block section_main_content_block %}
				{% sw_include "@Storefront/storefront/section/cms-section-block-container.html.twig" %}
			{% endblock %}
		{% endfor %}
	</div>
{% endblock %}

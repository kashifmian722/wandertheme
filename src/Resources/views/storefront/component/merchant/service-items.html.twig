<div class="service-wrapper">

    <div class="service-headline">
        {{ "merchantBox.serviceHeadline"|trans }}
    </div>

    <div class="service-items">
        {# Show only 4 service itmes if the scope == listing and display the left count as 5. item #}
        {% if scope == 'listing' %}
            {% set breakLoop = false %}

            {% for service in services if not breakLoop %}

                {% if loop.index < 5 %}
                    <div class="service-item">
                        <span class="icon-holder">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24"><path fill="#000000" fill-rule="evenodd" d="M3.06 10.44a1.5 1.5 0 0 0-2.12 2.12l7 7a1.5 1.5 0 0 0 2.12 0l13-13a1.5 1.5 0 0 0-2.12-2.12L9 16.378l-5.94-5.94z"/></svg>
                        </span>
                        <span class="service-name">{{ service.translated.name }}</span>
                    </div>
                {% else %}
                    <a href="{{ seoUrl('storefront.merchant.detail', {'id': id}) }}" title="{{ "listing.boxMerchantDetails"|trans|striptags }}" class="service-item count">+ 3</a>
                    {% set breakLoop = true %}
                {% endif %}

            {% endfor %}

        {% else %}
            {# Show all given service items if the scope != listing #}
            {% for service in services %}
                <div class="service-item">
                    <span class="icon-holder">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24"><path fill="#000000" fill-rule="evenodd" d="M3.06 10.44a1.5 1.5 0 0 0-2.12 2.12l7 7a1.5 1.5 0 0 0 2.12 0l13-13a1.5 1.5 0 0 0-2.12-2.12L9 16.378l-5.94-5.94z"/></svg>
                    </span>
                    <span class="service-name">{{ service.translated.name }}</span>
                </div>
            {% endfor %}

        {% endif %}
    </div>

</div>

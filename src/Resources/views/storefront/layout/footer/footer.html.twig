{% sw_extends '@Storefront/storefront/layout/footer/footer.html.twig' %} 

{% set bcPluginSettings = context.saleschannel.id|getWlPluginConfig %}
{% set bcThemeSettings = context.saleschannel.id|getWlThemeSettings %}

{% block layout_footer_inner_container %}
    <div class="container-fluid p-0">
		{% block layout_footer_navigation %}
			<div id="footerColumns"
				 class="row footer-columns"
				 data-collapse-footer="true">
				{% if bcPluginSettings['bcwlenablenewsletter'] %}
					{% set bc_newsletterPageId = page.getExtension('BrandCrockWanderlust').bcWlNewsletterPage %}
					<div class="bc-wl-footer-newsletter">
						<div class="bc-wl-newsletter-container">
							<span class="h2 bc-wl-newsletter-headline">{{ 'bc-wl-footer-newsletter.headLine'|trans|sw_sanitize }}</span>
							<div class="bc-wl-newsletter-text">{{ 'bc-wl-footer-newsletter.description'|trans|sw_sanitize }}</div>
							{% if page.getExtension('BrandCrockWanderlust').bcWlDoubleOptIn and bc_newsletterPageId %}
								<div class="bc-wl-newsletter-button">
									<a href="{{ path('frontend.cms.page',{ id: bc_newsletterPageId }) }}"
									   data-toggle="modal"
									   data-url="{{ path('frontend.cms.page',{ id: bc_newsletterPageId }) }}"
									   data-modal-class="modal-bc-wl-newsletter"
									   title="{{ 'bc-wl-footer-newsletter.subscribeButton'|trans|sw_sanitize }}"
									   rel="noopener"
									   class="btn btn-bc-wl-newsletter">
									   {{ 'bc-wl-footer-newsletter.subscribeButton'|trans|sw_sanitize }}
									</a>
								</div>
							{% else %}
								<div class="bc-wl-newsletter-msg">
									{{ 'bc-wl-footer-newsletter.newsletterInfo'|trans|sw_sanitize }}
								</div>
							{% endif %}
						</div>
					</div>
				{% endif %}
				{% block layout_footer_navigation_hotline %}
					<div class="col-md-4 footer-column js-footer-column">
						{% block layout_footer_navigation_hotline_headline %}
							 {{ parent() }}
						{% endblock %}

						{% block layout_footer_navigation_hotline_content %}
							 {{ parent() }}
						{% endblock %}
					</div>
				{% endblock %}

				{% block layout_footer_navigation_columns %}
					{{ parent() }}
				{% endblock %}
			</div>
		{% endblock %}

		{% block layout_footer_payment_shipping_logos %}
			{{ parent() }}
			<div class="additional_info_block row">
				{% if (bcPluginSettings['bcwlenablefootersocialicon']) and ( bcPluginSettings['bcwlenablefacebook'] or bcPluginSettings['bcwlenabletwitter'] or bcPluginSettings['bcwlenableinstagram'] or bcPluginSettings['bcwlenableyoutube'] or bcPluginSettings['bcwlenablexing'] ) %}

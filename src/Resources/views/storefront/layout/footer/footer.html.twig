						<span class="h5 info_heading">{{ "bc-wl-footer-additional-block.footerBlock1Title" | trans }}</span>
						<div class="social_media_icon">
							<ul>
							  {% if bcPluginSettings['bcwlenablefacebook'] and bcPluginSettings['bcwlenablefacebookurl'] is not empty %}
								<li class="icon--facebook">
									<a href="{{ bcPluginSettings['bcwlenablefacebookurl'] }}" id="facebook" rel="noopener" target="_blank" title="{{ "bc-wl-social-media-icons-title.facebook" | trans }}">
